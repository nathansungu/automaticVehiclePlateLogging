{
  "compilerOptions": {
    "target": "es2016",
    "types": ["node"],

    "module": "commonjs",
    "outDir": "./build",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/generated/**/*.ts", "prisma.config.ts"]
}
